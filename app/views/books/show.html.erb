<div class="container">
	<div class="row">
		<div class="col-xs-3">

			<h2>User info</h2>
			<%= render 'users/profile', user: @user %>

			<h2>New book</h2>
			<%= render 'books/newform', book: @book %>

		</div>

		<div class="col-xs-9">
			<h2>Book detail</h2>

			<table class="table">
				<tr>
					<td>
						<%= link_to (@book.user) do %>
						<%= attachment_image_tag(@book.user, :profile_image, :fill, 100, 100, fallback: "no-image-mini.jpg") %><br>
						<%= @book.user.name %>
						<% end %>
					</td>
					<td><%= link_to @book.title, @book %></td>
					<td><%= @book.body %></td>
					<%# いいね機能 %>
					<td>
						<% if @book.favorited_by?(current_user) %>
							<li>
								<%= link_to book_favorites_path(@book), method: :delete do %>
								<i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
								<%= @book.favorites.count %> 
								<% end %>
							</li>
						<% else %>
							<li>
								<%= link_to book_favorites_path(@book), method: :post do %>
								<i class="fa fa-heart-o" aria-hidden="true"></i>
								<%= @book.favorites.count %> 
								<% end %>
							</li>
						<% end %>
					</td>
					<%# いいね機能 %>
					<td> <p class="comment-count">コメント数：<%= @book.book_comments.count %></p> </td>
					<% if @book.user == current_user %>
					<td><%= link_to "Edit",edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
					<td><%= link_to "Destroy",@book, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
					<% end %>
				</tr>
			</table>

			<h2>Comment</h2>

			<table class="table">
				<% @book.book_comments.each do |book_comment| %>
					<tr>
						<td>
							<%= link_to user_path(book_comment.user.id) do %>
								<%= attachment_image_tag(book_comment.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %><br>
								<%= book_comment.user.name %>
							<% end %>
						</td>
						<td><%= book_comment.comment %></td>
						<%# 投稿したユーザーのみdestroyボタン表示 %>
						<% if book_comment.user.id == current_user.id %>
							<td><%= link_to "Destroy",book_book_comment_path(@book, book_comment), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger" %></td>
						<% end %>
						<%# 投稿したユーザーのみdestroyボタン表示 %>
					</tr>
				<% end %>
			</table>


			<%# コメントフォーム %>
			<%= form_for [@book, @book_comment] do |f| %>
				<div class="field">
					<%= f.text_area :comment, rows:'5', class: "form-control",placeholder: "コメントをここに" %>
				</div>
				<div class="actions">
    			<%= f.submit "送信", class: "btn btn-sm btn-primary pull-right" %>
				</div>
			<% end %>
			<%# コメントフォーム %>
		</div>
	</div>
</div>

